{
  "compilerOptions": {
    "outDir": "./public/js",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./resources/js",
    "paths": {
      "@/*": ["./*"],
      "@draft/*": ["./bundles/Draft/*"],
      "@site/*": ["./bundles/Site/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "include": [
    "./resources/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}